<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Edit post</title>
        <script type="module" src="https://unpkg.com/@fluentui/web-components"></script>
    </head>
    <body>
        <form id="update-form" action="/api/post/<%= data.PostId %>" method="post">
            <label for="title">제목</label><br />
            <input type="text" id="title" name="title" value="<%= data.title %>" required /><br />
            <br />
            <label for="content">내용</label><br />
            <textarea id="content" name="content" required><%= data.content %></textarea><br />
            <br />
            <button type="button" onclick="location.href='/api/post/detail/<%= data.PostId %>'">
                돌아가기
            </button>
            <div colspan="2">
                <button type="submit">글 수정하기</button>
            </div>
        </form>
        <script>
            document.getElementById('update-form').addEventListener('submit', (event) => {
                event.preventDefault();

                const formData = new FormData(event.target);
                const title = formData.get('title');
                const content = formData.get('content');

                fetch('http://localhost:8080/api/post/<%= data.PostId %>', {
                    method: 'put',
                    body: JSON.stringify({ title, content }),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then((res) => {
                    if (res.status === 201) {
                        alert('수정되었습니다.');
                        window.location.href = '/api/post';
                    }
                });
            });
        </script>
    </body>
</html>
