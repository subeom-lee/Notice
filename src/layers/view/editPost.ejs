<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Write post</title>
        <link
            href="https://fonts.googleapis.com/css2?family=Dongle&display=swap"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"
        ></script>
        <style>
            body {
                text-align: center;
                background-color: antiquewhite;
            }
            button {
                margin-top: 20px;
            }
        </style>
    </head>
    <body>
        <form id="update-form" action="/api/post/<%= data.PostId %>" method="post">
            <label
                for="title"
                style="font-size: 100px; margin-top: 70px; font-family: 'Dongle', sans-serif"
                >제목</label
            ><br />
            <input
                type="text"
                id="title"
                name="title"
                style="width: 500px; height: 100px"
                value="<%= data.title %>"
                required
            /><br />
            <br />
            <label
                for="content"
                style="font-size: 100px; margin-top: 10px; font-family: 'Dongle', sans-serif"
                >내용</label
            ><br />
            <textarea
                id="content"
                name="content"
                style="width: 500px; height: 300px; resize: none"
                required
            >
<%= data.content %></textarea
            ><br />
            <br />
            <div colspan="2">
                <button type="submit" class="btn btn-info">글 수정하기</button>
            </div>
        </form>
        <script>
            document.getElementById('update-form').addEventListener('submit', (event) => {
                event.preventDefault();

                const formData = new FormData(event.target);
                const title = formData.get('title');
                const content = formData.get('content');

                fetch('http://localhost:8080/api/post/<%= data.PostId %>', {
                    method: 'put',
                    body: JSON.stringify({ title, content }),
                    headers: {
                        'Content-Type': 'application/json'
                    }
                }).then((res) => {
                    if (res.status === 201) {
                        alert('수정되었습니다.');
                        window.location.href = '/api/post';
                    }
                });
            });
        </script>
    </body>
</html>
